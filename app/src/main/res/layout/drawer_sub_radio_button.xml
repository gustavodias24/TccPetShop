<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="12dp">

    <TextView
        android:id="@+id/history_data"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:text="@string/history_time"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textFontWeight="400"
        android:textSize="17sp"
        android:lineHeight="20dp" />

    <ImageView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layerType="software"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_arrow_details" />

    <ImageView
        android:id="@+id/store_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/history_data"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dotted_line" />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/store_name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/history_data"
        app:layout_constraintStart_toEndOf="@+id/store_image"
        android:textFontWeight="400"
        android:textSize="17sp"
        android:lineHeight="20dp" />

    <ImageView
        android:id="@+id/separetor"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/dotted_line" />

    <ImageView
        android:id="@+id/ic_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/separetor"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_checked" />

    <TextView
        android:id="@+id/order_finished"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:text="@string/order_finished"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/separetor"
        app:layout_constraintStart_toEndOf="@+id/ic_checked"
        android:textFontWeight="400"
        android:textSize="17sp"
        android:lineHeight="20dp" />

    <Button
        android:id="@+id/btn_add_cartao"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:background="@drawable/default_button"
        android:backgroundTint="@color/grey_button_background"
        android:fontFamily="sans-serif"
        android:layout_marginTop="15dp"
        android:lineHeight="19dp"
        android:text="@string/btn_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_finished"
        android:textAllCaps="false"
        android:textColor="@color/red_cc0000"
        android:textFontWeight="500"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_cancelar"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/default_button"
        android:backgroundTint="@color/grey_button_background"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toEndOf="@+id/btn_add_cartao"
        app:layout_constraintTop_toBottomOf="@+id/order_finished"
        android:layout_marginStart="45dp"
        android:lineHeight="19dp"
        android:text="@string/btn_buy_again"
        android:textAllCaps="false"
        android:textColor="@color/red_cc0000"
        android:textFontWeight="500"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>